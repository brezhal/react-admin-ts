{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "jsx-no-lambda": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "prefer-const": false,
    "no-console": false,
    "no-trailing-whitespace": true,
    "no-var-keyword": true,
    "interface-name": false,
    "semicolon": [true, "always", "ignore-interfaces"]
  }
}
